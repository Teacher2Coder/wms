  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Teacher2Coder/wms/issues"
  },
  "homepage": "https://github.com/Teacher2Coder/wms#readme",
  "dependencies": {
    "concurrently": "^9.2.0",
    "killport": "^1.0.2"
  }
}
